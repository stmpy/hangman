<div class="row">
	<div id="message" class="col-sm-12">
		{{#if message}}
			<div {{bind-attr class=":alert messageType"}}>{{{message}}}</div>
		{{/if}}
	</div>
</div>
<div class="row">
	<div class="col-sm-4">
		{{#each letter in alphabet}}
			<button {{action 'checkLetter' letter.value}} {{bind-attr id="letter.id"}} class="btn btn-primary letters" {{bind-attr disabled=letter.isClicked}}>{{letter.value}}</button>
		{{/each}}
		<div class="row">
			<div class="col-sm-12" style="text-align:center;">
				<span id="guesses" {{bind-attr class=":label guessesClass"}}>Guesses Left <strong>{{guessesLeft}}</strong></span>
			</div>
		</div>
	</div>
	<div class="col-sm-8">
		<div id="word-wrapper">
			{{#each letter in word}}
				<div class="underline">
					<span {{bind-attr class="letter.isFound::hide-letter"}}>{{letter.value}}</span>
				</div>
			{{/each}}
		</div>
	</div>
</div>